# Base: Python slim (leve, mas com o essencial)
FROM python:3.12-slim

# Diretório de trabalho dentro do container
WORKDIR /app

# Instalar dependências de sistema necessárias pro Scrapy
RUN apt-get update && apt-get install -y \
    gcc \
    libffi-dev \
    libxml2-dev \
    libxslt1-dev \
    libssl-dev \
    python3-dev \
    curl \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Copiar requirements (se existir) e instalar
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copiar todo o projeto pra dentro do container
COPY . .

# Definir Scrapy como comando padrão
ENTRYPOINT ["scrapy"]
